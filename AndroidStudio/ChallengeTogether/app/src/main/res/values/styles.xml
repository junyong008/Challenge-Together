<resources>

    <style name="Widget.Theme.ChallengeTogether.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ChallengeTogether.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- 팝업메뉴 스타일 변경 -->
    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/fontstyle_culture</item>
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 툴팁 텍스트 스타일 변경 -->
    <style name="TooltipTextAppearance">
        <item name="android:fontFamily">@font/fontstyle_culture</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 바텀 네비게이션 텍스트 스타일 변경 -->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/fontstyle_culture</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- 커스텀 토스트 : https://github.com/Muddz/StyleableToast -->
    <style name="errorToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#000000</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stIconStart">@drawable/ic_error</item>
        <item name="stLength">SHORT</item>
        <item name="stRadius">10dp</item>
    </style>

    <style name="successToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#FFFFFF</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#000000</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stIconStart">@drawable/ic_success</item>
        <item name="stLength">SHORT</item>
        <item name="stRadius">10dp</item>
    </style>

    <style name="Widget.ChallengeTogether.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.ChallengeTogether.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--ffcc00는 노랑 경고표시 추후 필요하면 추가 -->
</resources>